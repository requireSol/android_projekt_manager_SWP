<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/parent_layout">


    <androidx.cardview.widget.CardView
        android:id="@+id/startDate"
        android:layout_width="390dp"
        android:layout_height="123dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/appointment_adapter_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="AppointmentName"
            android:textSize="25sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"></TextView>

        <TextView
            android:id="@+id/appointment_adapter_type"
            android:layout_width="83dp"
            android:layout_height="52dp"
            android:layout_below="@id/appointment_adapter_name"
            android:layout_marginTop="45dp"
            android:text="No Type"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"></TextView>

        <TextView
            android:id="@+id/appointment_adapter_date"
            android:layout_width="295dp"
            android:layout_height="77dp"
            android:layout_below="@id/appointment_adapter_name"
            android:layout_gravity="right"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="45dp"
            android:layout_toRightOf="@id/appointment_adapter_type"
            android:text="Date"
            android:textSize="20dp">


        </TextView>

    </androidx.cardview.widget.CardView>



</RelativeLayout>